<h2><%= @party.name %></h2>

<p><%= @party.time %> p.m.</p>
<p><%= @party.date %></p>
<p>Host: <%= @party.user.create_username %></p><br>

<h3>Costumes:</h3>

<ul>
  <% @party.costumes.each do |costume| %>
    <li><%= link_to "#{costume.name}", costume_path(costume) %></li><br>
  <% end %>
</ul>

<h3>Best Costume: <%= @party.best_costume %>!</h3>

<%= link_to "VIEW PARTIES", costume_parties_path %>

<% if @party.user == current_user %>
  <%= link_to "EDIT PARTY DETAILS", edit_costume_party_path(@party) %>
  <%= link_to "DELETE PARTY", costume_party_path(@party), method: :delete %>
<% end %>
