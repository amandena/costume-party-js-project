<!DOCTYPE html>
<html>
  <head>
    <title>CostumePartyRailsProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar">
      <%= link_to "Home", root_path %>
      <% if current_user %>
        <%= link_to "Log Out, #{current_user.create_username}?", logout_path %>
      <% else %>
      <%= link_to "Sign Up", new_user_path %>
      <%= link_to "Log In", login_path %>
      <% end %>
    </div>
    <div class="content">
      
      <%= yield %>
    </div>

  </body>
</html>
