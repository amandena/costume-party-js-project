<h1>Log In Below:</h1>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<%= form_for @user, url: '/sessions/create' do |f| %>

  <%= f.label :email, "Email: " %>
  <%= f.text_field :email %><br><br>

  <%= f.label :password, "Password: " %>
  <%= f.password_field :password %><br><br>

  <%= f.submit "Log In" %>
<% end %>

<p>or</p>
<%= link_to "Log in with Google", "/auth/google_oauth2", id: "sign_in" %>
